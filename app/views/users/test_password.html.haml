%h1 Test Password for User '#{@user.username}'

= form_for @user, :url => user_authenticate_path(@user), :method => :get do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg


  .field
    = f.label :password
    = f.text_field :password
  .actions
    = f.submit 'Test'

= link_to 'Back', users_path
