= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :password_digest
    = f.text_field :password_digest
  .field
    = f.label :producer
    = f.check_box :producer
  .field
    = f.label :director
    = f.check_box :director
  .field
    = f.label :actor
    = f.check_box :actor
  .actions
    = f.submit 'Save'
